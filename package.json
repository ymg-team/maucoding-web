{
  "name": "oopsreview-web",
  "version": "0.1.0-beta.0",
  "description": "web version of oopsreview.com",
  "main": "dist/index.js",
  "scripts": {
    "start": "concurrently \"yarn webpack:watch\" \"yarn server:watch\"",
    "server:watch": "cross-env DEBUG=app:* cross-env NODE_ENV=development nodemon ./src/server/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "webpack:watch": "yarn remove:build-client && cross-env NODE_ENV=development webpack --watch --progress --config webpack/webpack.client.config.js",
    "webpack-server:prod": "yarn remove:webpack-build-server && cross-env NODE_ENV=production webpack --progress --config webpack/webpack.server.config.js",
    "webpack:prod": "yarn remove:build-client && cross-env NODE_ENV=production webpack --progress --config webpack/webpack.client.config.js",
    "babel:prod": "yarn remove:build-server && cross-env NODE_ENV=production babel src -d dist --copy-files",
    "build:prod": "yarn webpack:prod && yarn babel:prod",
    "server-test:prod": "cross-env NODE_ENV=production nodemon ./dist/server/index.js  --exec \"node -r dotenv/config\"",
    "remove:build-client": "yarn rimraf public/build",
    "remove:webpack-build-server": "yarn rimraf public/build-server",
    "remove:build-server": "yarn rimraf dist",
    "update-changelog": "conventional-changelog >> CHANGELOG.md",
    "lint": "eslint src",
    "test": "yarn test",
    "release": "standard-version",
    "release:beta": "standard-version -p beta"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idmore/oopsreview-web.git"
  },
  "keywords": [
    "oopsreview",
    "web"
  ],
  "author": "[{\"name\":\"Yusuf Akhsan Hidayat\", \"email\": \"yussandeveloper@gmail.com\"}]",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/idmore/oopsreview-web/issues"
  },
  "homepage": "https://github.com/idmore/oopsreview-web#readme",
  "dependencies": {
    "@tinymce/tinymce-vue": "^2.1.0",
    "axios": "^0.18.0",
    "crypto-js": "^3.1.9-1",
    "debug": "^3.1.0",
    "mongodb": "^3.0.4",
    "pug": "^2.0.0-rc.4",
    "restify": "^6.3.4",
    "restify-cookies": "^0.2.5",
    "string-manager": "^2.0.0-beta.0",
    "sweetalert": "^2.1.0",
    "tslib": "^1.9.3",
    "typescript": "^2.7.2",
    "vue": "^2.6.11",
    "vue-input-tag": "^2.0.6",
    "vue-meta": "^1.5.2",
    "vue-router": "^3.0.7",
    "vuex": "^3.1.1",
    "webpack": "^3.11.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-webpack": "^1.0.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "cloudinary": "^1.11.0",
    "concurrently": "^4.1.0",
    "conventional-changelog-cli": "^2.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.10",
    "dotenv": "^5.0.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.15.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "ts-loader": "^3.5.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "vue-loader": "^14.1.1",
    "vue-server-renderer": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
